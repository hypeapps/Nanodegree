<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/color50"
    android:orientation="vertical"
    tools:context="pl.hypeapp.portfolioapp.ApplicationChooseMenuActivity"
    android:gravity="center_vertical|center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:id="@+id/header"
        android:layout_alignLeft="@+id/MakeYourAppMaterial_button"
        android:layout_alignRight="@+id/MakeYourAppMaterial_button"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="15dp"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunshine"
        android:id="@+id/sunshineApp_button"
        android:layout_alignRight="@+id/MakeYourAppMaterial_button"
        android:layout_alignLeft="@+id/MakeYourAppMaterial_button"
        android:layout_below="@+id/header"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:layout_marginBottom="10dp"
        android:onClick="LaunchApplication" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular Movies"
        android:id="@+id/PopularMoviesApp_button"
        android:layout_below="@+id/sunshineApp_button"
        android:layout_alignLeft="@+id/MakeYourAppMaterial_button"
        android:layout_alignRight="@+id/MakeYourAppMaterial_button"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:layout_marginBottom="10dp"
        android:onClick="LaunchApplication" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock Hawk"
        android:id="@+id/StockHawkApp_button"
        android:layout_below="@+id/PopularMoviesApp_button"
        android:layout_alignRight="@+id/MakeYourAppMaterial_button"
        android:layout_alignLeft="@+id/MakeYourAppMaterial_button"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:layout_marginBottom="10dp"
        android:onClick="LaunchApplication" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build it Bigger"
        android:id="@+id/BuildItBiggerApp_buton"
        android:layout_below="@+id/StockHawkApp_button"
        android:layout_alignLeft="@+id/MakeYourAppMaterial_button"
        android:layout_alignRight="@+id/MakeYourAppMaterial_button"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:layout_marginBottom="10dp"
        android:onClick="LaunchApplication" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Your App Material"
        android:id="@+id/MakeYourAppMaterial_button"
        android:layout_below="@+id/BuildItBiggerApp_buton"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="LaunchApplication" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Ubiquitous"
        android:id="@+id/GoUbiquitousApp_button"
        android:layout_below="@+id/MakeYourAppMaterial_button"
        android:layout_alignLeft="@+id/MakeYourAppMaterial_button"
        android:layout_alignRight="@+id/MakeYourAppMaterial_button"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:layout_marginBottom="10dp"
        android:onClick="LaunchApplication" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capstone"
        android:id="@+id/CapstoneApp_button"
        android:layout_below="@+id/GoUbiquitousApp_button"
        android:layout_alignRight="@+id/MakeYourAppMaterial_button"
        android:layout_alignLeft="@+id/MakeYourAppMaterial_button"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:layout_marginBottom="10dp"
        android:onClick="LaunchApplication" />


</RelativeLayout>
